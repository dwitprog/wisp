        "browser-sync": "^3.0.4",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "css-loader": "^7.1.2",
        "cssnano": "^7.1.2",
        "mini-css-extract-plugin": "^2.9.4",
        "postcss-combine-media-query": "^2.1.0",
        "postcss-extract-media-query": "^3.2.0",
        "postcss-import": "^16.1.1",
        "postcss-loader": "^8.2.0",
