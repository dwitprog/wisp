        "postcss-preset-env": "^10.6.0",
        "postcss-short": "^5.0.0",
        "postcss-sort-media-queries": "^5.2.0",
        "replace-in-file-webpack-plugin": "^1.0.6",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.97.2",
        "sass-loader": "^16.0.6",
